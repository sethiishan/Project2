            <div class="tab-content-student tab-content">
                <div id="st-forget" style="display: inline !important;">
                    <h1>Forget Password</h1>
                    <% if(message.length>0) {%>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form id="form-signup" method="post" action="/forget">
                        <div class="field-wrap">
                            <label><% if(!user || !user.email) {%>
                                Email Address<% } %><span class="req">*</span>
                            </label>
                            <input
                                name="email"
                                type="email"
                                required
                                autocomplete="off"
                                value="<%= (user && user.email) ? user.email : '' %>"
                            />
                        </div>
                        <% if(otp) {%>
                        <div class="field-wrap">
                            <label>
                                Set A Password<span class="req">*</span>
                            </label>
                            <input
                                name="password"
                                type="password"
                                required
                                autocomplete="off"
                            />
                        </div>

                        <div class="field-wrap" id="otp" style="display: block">
                            <label> OTP <span class="req">*</span> </label>
                            <input
                                name="otp"
                                type="text"
                                required
                                value="<%= (user && user.otp) ? user.otp : "" %>"
                                autocomplete="off"
                            />
                        </div>
                        <% } %>

                        <!-- <span class="agreement"
                            >By clicking Join now, you agree to the User
                            Agreement, Privacy Policy, and Cookie Policy.</span
                        > -->
                        <button type="submit" class="button button-block">
                            Reset Password
                        </button>
                    </form>
                    <p class="forgot"><a href="/">Go Back!</a></p>
                </div>
                <div></div>
            </div>
